<?php
$host = "localhost";
$user = "root";
$pass = "";
$db   = "motika_vibes";

$conn = new mysqli($host,$user,$pass,$db);
if($conn->connect_error){
  die("Database Error");
}

session_start();

/* Basic security headers */
header("X-Frame-Options: SAMEORIGIN");
header("X-Content-Type-Options: nosniff");
header("X-XSS-Protection: 1; mode=block");
?>
