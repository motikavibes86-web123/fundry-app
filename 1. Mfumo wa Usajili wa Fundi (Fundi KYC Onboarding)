import 'package:flutter/material.dart';

class FundiKYCScreen extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Usajili wa Fundi", style: TextStyle(color: Colors.white)),
        backgroundColor: Color(0xFF0A192F), // Deep Navy
      ),
      body: Padding(
        padding: const EdgeInsets.all(20.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              "Tupatie maelezo yako",
              style: TextStyle(fontSize: 24, fontWeight: FontWeight.bold),
            ),
            SizedBox(height: 10),
            Text("Ili kulinda wateja wetu, tunahitaji kuhakiki utambulisho wako."),
            SizedBox(height: 30),
            
            // Kitufe cha kupakia ID
            _buildUploadCard(
              icon: Icons.badge_outlined,
              title: "Kitambulisho cha Taifa (NIDA)",
              status: "Haijapakiwa",
            ),
            SizedBox(height: 15),
            
            // Kitufe cha kupakia Cheti
            _buildUploadCard(
              icon: Icons.card_membership_outlined,
              title: "Cheti cha Ufundi (VETA n.k)",
              status: "Si lazima",
            ),
            
            Spacer(),
            
            // Kitufe cha Kukamilisha
            SizedBox(
              width: double.infinity,
              height: 55,
              child: ElevatedButton(
                onPressed: () {
                  // Logic ya kutuma data Firebase Storage
                },
                style: ElevatedButton.styleFrom(
                  backgroundColor: Color(0xFFD4AF37), // Gold
                  shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12)),
                ),
                child: Text("TUMA MAOMBI", style: TextStyle(color: Colors.white, fontWeight: FontWeight.bold)),
              ),
            )
          ],
        ),
      ),
    );
  }

  Widget _buildUploadCard({required IconData icon, required String title, required String status}) {
    return Container(
      padding: EdgeInsets.all(16),
      decoration: BoxDecoration(
        border: Border.all(color: Colors.grey.shade300),
        borderRadius: BorderRadius.circular(12),
      ),
      child: Row(
        children: [
          Icon(icon, size: 30, color: Color(0xFF0A192F)),
          SizedBox(width: 15),
          Expanded(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(title, style: TextStyle(fontWeight: FontWeight.w600)),
                Text(status, style: TextStyle(fontSize: 12, color: Colors.grey)),
              ],
            ),
          ),
          Icon(Icons.add_a_photo, color: Color(0xFFD4AF37)),
        ],
      ),
    );
  }
}
